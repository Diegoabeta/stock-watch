{
  "expo": {
    "name": "stock-watch",
    "slug": "stock-watch",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ios-icon.png",
    "scheme": "stockwatch",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1E1E1E",
        "foregroundImage": "./assets/images/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.stockwatch"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-auth0",
        {
          "domain": "dev-r1ipakcixlqqqjf8.us.auth0.com"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E1E1E"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
